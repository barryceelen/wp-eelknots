<?xml version="1.0"?>
<ruleset name="Example Plugin">
	<description>A custom set of PHP_CodeSniffer rules for the Example Plugin site-specific plugin</description>
	<rule ref="WordPress">
		<exclude name="WordPress.WP.I18n.MissingTranslatorsComment"/>
		<exclude name="WordPress.VIP.RestrictedFunctions"/>
	</rule>
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array" value="example_plugin"/>
		</properties>
	</rule>
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="example-plugin"/>
		</properties>
	</rule>
	<exclude-pattern>*.min.js</exclude-pattern>
	<exclude-pattern>/node_modules/*</exclude-pattern>
	<exclude-pattern>/themes/example/js/vendor/*</exclude-pattern>
	<exclude-pattern>/themes/example/js/public.js</exclude-pattern>
</ruleset>
